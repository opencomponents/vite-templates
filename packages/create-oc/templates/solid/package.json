{
  "name": "base-component-solid",
  "description": "",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx src",
    "dev": "oc-server dev",
    "build": "tsc --noEmit && oc package .",
    "test": "vitest"
  },
  "oc": {
    "files": {
      "data": "src/server.ts",
      "template": {
        "src": "src/App.tsx",
        "type": "oc-template-solid"
      },
      "static": [
        "public"
      ]
    },
    "parameters": {
      "userId": {
        "default": 1,
        "description": "The user id from the user database",
        "example": 1,
        "mandatory": true,
        "type": "number"
      }
    }
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.9",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "jsdom": "^21.1.1",
    "oc-server": "^1.1.9",
    "oc-template-solid-compiler": "^0.11.6",
    "solid-js": "^1.8.21",
    "typescript": "5.5.4",
    "vitest": "^2.0.5"
  }
}