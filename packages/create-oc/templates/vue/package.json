{
  "name": "base-component-vue",
  "description": "",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx src",
    "dev": "oc-server dev",
    "build": "vue-tsc --noEmit && oc package .",
    "test": "vitest"
  },
  "oc": {
    "files": {
      "data": "src/server.ts",
      "template": {
        "src": "src/App.vue",
        "type": "oc-template-vue"
      },
      "static": [
        "public"
      ]
    },
    "parameters": {
      "userId": {
        "default": 1,
        "description": "The user id from the user database",
        "example": 1,
        "mandatory": true,
        "type": "number"
      }
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-vue": "^5.0.0",
    "jsdom": "^21.1.1",
    "oc-server": "^2.0.4",
    "oc-template-vue-compiler": "^1.0.3",
    "typescript": "5.0.2",
    "vitest": "^0.29.7",
    "vue": "^3.3.11",
    "vue-tsc": "^1.8.25"
  }
}