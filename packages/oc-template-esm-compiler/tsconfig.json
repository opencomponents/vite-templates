{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "rootDir": "./src",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
  },
  "include": ["./src"]
}
