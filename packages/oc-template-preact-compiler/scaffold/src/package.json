{
  "name": "base-component-preact",
  "description": "",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx src",
    "dev": "oc-server dev",
    "build": "tsc --noEmit && oc package .",
    "test": "vitest"
  },
  "oc": {
    "files": {
      "data": "src/server.ts",
      "template": {
        "src": "src/App.tsx",
        "type": "oc-template-preact"
      },
      "static": [
        "public"
      ]
    },
    "parameters": {
      "userId": {
        "default": 1,
        "description": "The user id from the user database",
        "example": 1,
        "mandatory": true,
        "type": "number"
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@preact/preset-vite": "^2.7.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "jsdom": "^21.1.1",
    "oc-server": "^1.1.7",
    "oc-template-preact-compiler": "^0.8.3",
    "preact": "^10.13.2",
    "typescript": "5.0.2",
    "vitest": "^0.29.7"
  }
}